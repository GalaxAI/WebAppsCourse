<div class="container">
  <h1 class="page-title">Notes</h1>
  
  <div class="card">
    <h2 class="card-header">Create New Note</h2>
    <form action="/notes" method="POST" enctype="multipart/form-data" class="note-form">
      <div class="form-group">
        <label for="title" class="form-label">Title:</label>
        <input 
          type="text" 
          id="title" 
          name="title" 
          required 
          class="form-control"
          placeholder="Enter note title"
        >
      </div>
      
      <div class="form-group">
        <label for="content" class="form-label">Content:</label>
        <textarea 
          id="content" 
          name="content" 
          required 
          class="form-control"
          rows="4"
          placeholder="Write your note here..."
        ></textarea>
      </div>
      
      <button type="submit" class="btn btn-primary">
        <i class="fas fa-plus-circle"></i> Create Note
      </button>
    </form>
  </div>

  <div class="card">
    <h2 class="card-header">Existing Notes</h2>
    <div class="notes-list">
      <% if (notes && notes.length > 0) { %>
        <% notes.forEach(note => { %>
          <div class="note-item">
            <div class="note-header">
              <h3 class="note-title"><%= note.title %></h3>
              <form action="/notes/<%= note.id %>/delete" method="POST" class="note-actions">
                <button type="submit" class="btn btn-danger btn-sm">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </div>
            <div class="note-content"><%= note.content %></div>
            <% if (note.filePath) { %>
              <div class="note-attachment">
                <i class="fas fa-paperclip"></i>
                <span><%= note.filePath.split('/').pop() %></span>
              </div>
            <% } %>
          </div>
        <% }); %>
      <% } else { %>
        <div class="empty-state">
          <i class="fas fa-sticky-note empty-icon"></i>
          <p>No notes yet. Create your first note!</p>
        </div>
      <% } %>
    </div>
  </div>
</div>